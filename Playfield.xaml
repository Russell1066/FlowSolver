<UserControl x:Class="FlowSolver.Playfield"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlowSolver"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <UniformGrid Rows="8" Columns="8" Name="Field">
            <Rectangle HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2" Fill="#FFD11111"></Rectangle>
        </UniformGrid>
    </Grid>
</UserControl>
