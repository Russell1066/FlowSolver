<UserControl x:Class="FlowSolver.EditorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlowSolver"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="100">
    <Grid>
        <Button Content="Reset" Name="Reset" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="75" Click="Reset_Click"/>
        <Button Content="Clear" Name="Clear" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" Width="75" Click="Clear_Click"/>
        <Button Content="Save" Name="Save" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Width="75" Click="Save_Click"/>
        <Button Content="Load" Name="Load" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Width="75" Click="Load_Click"/>
        <UniformGrid Name="ColorPicker" Height="100" VerticalAlignment="Bottom" />
    </Grid>
</UserControl>
